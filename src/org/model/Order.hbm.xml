<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.model.Order" table="order" schema="bookcatdb">
        <id name="id" column="id"/>
        <property name="sum" column="sum"/>
        <property name="time" column="time"/>
        <many-to-one name="userByUserid" class="org.model.User">
            <column name="userid"/>
        </many-to-one>
        <set name="bkOdrsById" inverse="true">
            <key>
                <column name="orderid"/>
            </key>
            <one-to-many not-found="ignore" class="org.model.BkOdr"/>
        </set>
    </class>
</hibernate-mapping>